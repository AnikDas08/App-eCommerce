<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".ProductDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ProductImage"
            android:src="@drawable/imageplace"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/ProductText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#E1DCDC"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/Decrement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/decrement" />

        <TextView
            android:id="@+id/Quantites"
            android:text="1"
            android:textSize="30sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/Increment"
            android:src="@drawable/incremen"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/ProductDetailwork"
        android:text=" you selecct"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<EditText
            android:id="@+id/NameEdit"
            android:hint="User Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:inputType="text"
            android:padding="5dp"
            android:background="@drawable/edittextbackgroudcolor"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/Email"
            android:hint="User Email"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:padding="5dp"
            android:background="@drawable/edittextbackgroudcolor"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/NumberEdit"
            android:hint="User Number"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/edittextbackgroudcolor"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_height="wrap_content"/>-->

        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Price"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:text="BDT "
            android:textSize="25sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="#08FA12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/DetailPrice"
            android:text="200"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="#08F412"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>



    <Button
        android:id="@+id/Button"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:text="Order Now"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/button"
        android:layout_height="wrap_content"/>

</LinearLayout>